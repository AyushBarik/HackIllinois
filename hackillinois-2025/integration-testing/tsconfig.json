{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./lib",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "lib": ["es2020", "dom"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts", "lib"]
  }